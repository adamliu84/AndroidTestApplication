<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adam.androidtestapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" />
        <activity android:name=".XmlListActivity" />
        <activity android:name=".LearnToPlayActivity" />
        <activity
            android:name=".SQLiteActivity"
            android:label="@string/title_activity_notification_sql"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RFIDActivity"
            android:label="@string/title_activity_rfid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HttpGetUPActivity"
            android:label="@string/title_activity_http_get_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TvGuideActivity" />
        <activity android:name=".LocationActivity"
            android:label="@string/title_activity_location_gps">
        </activity>
    </application>

</manifest>